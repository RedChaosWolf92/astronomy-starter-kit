#!/bin/bash
#
# Astronomy Starter Kit - Bootstrap Installer
# https://github.com/RedChaosWolf92/astronomy-starter-kit
#

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
NC='\033[0m'

LAUNCHER_URL="https://raw.githubusercontent.com/YOUR_USERNAME/astronomy-starter-kit/main/astro"
INSTALL_DIR="$HOME/.local/bin"

echo -e "${CYAN}╔════════════════════════════════════════════════════════════════╗${NC}"
echo -e "${CYAN}║${NC}          ${BLUE}ASTRONOMY STARTER KIT${NC} - Bootstrap               ${CYAN}║${NC}"
echo -e "${CYAN}╚════════════════════════════════════════════════════════════════╝${NC}"
echo ""

# Check system
if [ ! -f /etc/os-release ]; then
    echo -e "${RED}✗ Cannot detect Linux distribution${NC}"
    exit 1
fi

. /etc/os-release

if [[ "$ID" != "ubuntu" && "$ID_LIKE" != *"ubuntu"* && "$ID" != "debian" ]]; then
    echo -e "${YELLOW}⚠ Warning: This installer is optimized for Ubuntu/Debian${NC}"
    echo -e "${YELLOW}  Detected: $PRETTY_NAME${NC}"
    echo ""
fi

# Create install directory
mkdir -p "$INSTALL_DIR"

# Download launcher
echo -e "${BLUE}Downloading launcher...${NC}"
if ! curl -sSL "$LAUNCHER_URL" -o "$INSTALL_DIR/astro"; then
    echo -e "${RED}✗ Failed to download launcher${NC}"
    exit 1
fi

chmod +x "$INSTALL_DIR/astro"

# Add to PATH if needed
if ! echo "$PATH" | grep -q "$INSTALL_DIR"; then
    SHELL_CONFIG=""
    
    if [ -n "$ZSH_VERSION" ]; then
        SHELL_CONFIG="$HOME/.zshrc"
    elif [ -n "$BASH_VERSION" ]; then
        SHELL_CONFIG="$HOME/.bashrc"
    else
        SHELL_CONFIG="$HOME/.profile"
    fi
    
    echo "" >> "$SHELL_CONFIG"
    echo "# Astronomy Starter Kit" >> "$SHELL_CONFIG"
    echo 'export PATH="$HOME/.local/bin:$PATH"' >> "$SHELL_CONFIG"
    
    export PATH="$HOME/.local/bin:$PATH"
    
    echo -e "${GREEN}✓ Added to PATH in $SHELL_CONFIG${NC}"
fi

echo -e "${GREEN}✓ Launcher installed${NC}"
echo ""
echo -e "${CYAN}═══════════════════════════════════════════════════════════════${NC}"
echo -e "${GREEN}Installation complete!${NC}"
echo -e "${CYAN}═══════════════════════════════════════════════════════════════${NC}"
echo ""
echo "Next steps:"
echo ""
echo "1. Reload your shell:"
echo -e "   ${YELLOW}source ~/.zshrc${NC}  # or ~/.bashrc"
echo "   ${YELLOW}# Or close and reopen your terminal${NC}"
echo ""
echo "2. Complete setup (installs all tools):"
echo -e "   ${YELLOW}astro${NC}"
echo ""
echo "3. Get started:"
echo -e "   ${YELLOW}astro jupyter${NC}      # Launch Jupyter Lab"
echo -e "   ${YELLOW}astro topcat${NC}       # Launch TOPCAT"
echo -e "   ${YELLOW}astro status${NC}       # Check installation"
echo ""
echo "Documentation: https://github.com/YOUR_USERNAME/astronomy-starter-kit"
echo ""
